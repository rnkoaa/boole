{
  "query": {
    "filtered": {
      "query": {
        "match": {
          "_all": {
            "query": "terminator"
          }
        }
      },
      "filter": {
        "or": {
          "filters": [
            {
              "nested": {
                "path": "directors",
                "query": {
                  "bool": {
                    "must": [
                      {
                        "match": {
                          "directors.name.untouched": "Ed W. Marsh"
                        }
                      }
                    ]
                  }
                }
              }
            },
            {
              "nested": {
                "path": "producers",
                "query": {
                  "bool": {
                    "must": [
                      {
                        "match": {
                          "producers.name.untouched": "Erik Fleming"
                        }
                      }
                    ]
                  }
                }
              }
            }
          ]
        }
      }
    }
  }
}